<%= link_to 'Back', root_path, class: "link back" %>
<% if admin? %>
  <%= link_to 'Create Item Listing', new_item_path, class: "button" %>
<% end %>

<h3>All Clothing</h3>
<% @items.each do |item| %>
  <div class='item-index'>
    <div class='container'>
      <a href=<%= item_path(item) %>
        <h4><%= item.name %></h4>
        <p><%= item.description %></p>
        <h4>Price: <%= item.price %>$</h4>
        <h4>In Stock: <%= item.quantity %></h4>
        <img src=<%= item.img_url %>>
      </a>
    </div>
  </div>
<% end %>
